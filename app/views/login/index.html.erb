<head xmlns="http://www.w3.org/1999/html">
  <link rel="Shortcut Icon" href="assets/web.ico">
  <title>login-page</title>
  <%= javascript_include_tag "jquery-1.11.0" %>
  <%= javascript_include_tag "language" %>
  <%= javascript_include_tag "login.js" %>
  <%= stylesheet_link_tag "login" %>
</head>

<body>

<div class="title">
  <h1><%= t(:login) %></h1>

</div>

<div class="loginDiv">
  <% if flash[:notice] %>
      <%= flash[:notice] %>
  <% end %>

  <form method="post" action="login">
    <input type="text" placeholder=<%= t('username') %>  name="username" /><br>
    <input type="password" placeholder=<%= t('password') %> name="password" /></br>
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"/>
    <%= t('language') %>:
    <input type="radio" name="locale" value="zh" class="language" id="chinese">中文</input>
    <input type="radio" name="locale" value="en" class="language" id="english">English</input><br>
    <br>
    <input type="reset" value="<%= t('reset') %>">
    <input type="submit" value="<%= t('login') %>"/>
  </form>
  <input type="button" value="<%= t('no_account') %>" class="registerButton" id="close"></div>
<div class="registerDiv">
  <%= render :template => "register/index" %>
</div>
</body>